<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>
<div class="container">
  <div class="row">
    <div class="col">
      <div class="sign">
        <div class="customer-title" style="width:25%;">
           <h4 class="m-4 text-center bg-light">新規登録</h4>
        </div>
          <div class="sign-name d-flex" style="margin-right:10%">
            <p>名前</p>
            <p style="margin-left:25.5%;">(姓)</p>
            <p><%= f.text_field :first_name,:placeholder => "田村", :style=> "margin-left:  10%;"%></p>
             <p style="margin-left:10%;">(名)</p>
            <p><%= f.text_field :last_name,:placeholder => "透人", :style=> "margin-left:  10%;" %></p>
          </div>

          <div class="sign-name-kana d-flex" style="margin-right: 10%">
            <p>フリガナ</p>
            <p style="margin-left:20%;">(セイ)</p>
            <p><%= f.text_field :first_name_kana,:placeholder => "タムラ", :style=> "margin-left:  10%;"%></p>
            <p style="margin-left:10%;">(メイ)</p>
            <p><%= f.text_field :last_name_kana,:placeholder => "ユキト", :style=> "margin-left:  10%;" %></p>
          </div>

          <div class="email d-flex justify-content-between" style="margin-right:17%;">
            <p>メールアドレス</p>
            <p><%= f.email_field :email,:placeholder => "tourentiancun@gmail.com" %></p>
          </div>

          <div class="postal_code d-flex justify-content-between" style="margin-right:  17%">
            <p>郵便番号(ハイフンなし)</p>
            <p><%= f.text_field :postal_code, :placeholder => "00000000" %></p>
          </div>

          <div class="address d-flex justify-content-between" style="margin-right:  17%">
            <p>住所</p>
            <p><%= f.text_field :address %></p>
          </div>

          <div class="telephone_number d-flex justify-content-between" style="margin-right:  17%">
            <p>電話番号</p>
            <p><%= f.text_field :telephone_number %></p>
          </div>

          <div class="field d-flex justify-content-between" style="margin-right:  17%">
            <p>パスワード(6文字以上)</p>
            <%= f.password_field :password %>
          </div>

          <div class="field d-flex justify-content-between" style="margin-right:17%; margin-top:10px;">
            <p>パスワード確認用</p>
            <p><%= f.password_field :password_confirmation %></p>
          </div>
          <div class="actions text-center mx-4">
            <%= f.submit "新規登録", class: "btn btn-success" %>
          </div>
          <% end %>
            <div class="sign_in">
              <h4 class="m-4 text-center bg-light w-25">既に登録済みの方</h4>
              <p class="ml-4"><%= link_to 'こちら',new_customer_session_path %>ログインしてください</p>
            </div>
      </div>
    </div>
  </div>
</div>


