<div class="containaer">
  <div class="row">
    <div class="col">
      <h1>商品一覧(全×件)</h1>
        <% @items.each do |item| %>
          <div class="item-all d-inline-block">
            <p><%= attachment_image_tag item, :image, size: "250x250",:class=>"m-3"%></p>
            <p><%= item.name %></p>
            <p><%= item.price %></p>
          </div>
        <% end %>
         <div class="page text-center"><%= paginate @items,:class=>"d-block" %></div>
    </div>
  </div>
</div>