<div class="container">
  <div class="row">
    <div class="col">
      <div class="address-title">
        <div class="address-title w-25">
          <h4 class="m-4 text-center bg-light">配送先登録/一覧</h4>
        </div>
          <div class="address-form">
            <%= form_with model: @address,url:  public_addresses_path(@address), local:true do |f| %>
              <div class="address-profile">
                <div class="address-post d-flex">
                  <p class="w-25">郵便番号(ハイフンなし)</p>
                  <p><%= f.text_field :postal_code %></p>
                </div>
                  <div class="address-item d-flex">
                    <p class="w-25">住所</p>
                    <p><%= f.text_field :address,:style=> "padding-right:150px;" %></p>
                  </div>
                    <div class="address-name d-flex">
                      <p class="w-25">宛名</p>
                      <p><%= f.text_field :name %></p>
                         <div class="address-link" style="margin-left:25%">
                          <%= f.submit '新規登録',class: "btn btn-success" %>
                        </div>
                  </div>
              </div>
            <% end %>
              <table class="table m-4 w-75">
                <thead class="bg-light">
                  <tr>
                    <th class="border border-dark">郵便番号</th>
                    <th class="border border-dark">住所</th>
                    <th class="border border-dark">宛名</th>
                    <th class="border border-dark"></th>
                  </tr>
                </thead>
                  <tbody class="border border-dark">
                    <% @addresses.each do |address| %>
                      <tr>
                        <td class="border border-dark m-4" style="padding:20px;"><%= address.postal_code %></td>
                        <td class="border border-dark m-4" style="padding:20px;"><%= address.address %></td>
                        <td class="border border-dark m-4" style="padding:20px;"><%= address.name %></td>
                        <td>
                          <div class="link">
                            <%= link_to '編集する', edit_public_address_path(address),:class=> "d-inline-block btn btn-success mr-3"  %>
                            <%= link_to '排除する', public_address_path(address.id), method: :delete,:class=> "d-inline-block btn btn-danger ml-3" %>
                          </div>
                      </tr>
                    <% end %>
                  </tbody>
              </table>
          </div>
      </div>
    </div>
  </div>
</div>