<div class="containaer">
  <div class="row">
    <div class="col">
      <div class="cart-title">
        <h4>ショッピングカート</h4>
          <table class="table">
            <thead>
              <tr>
                <th>商品名</th>
                <th>単価</th></th>
                <th>数量</th>
                <th>小計</th>
              </tr>
            </thead>
              <tbody>
                <% @cart_items.each do |cart_item| %>
                  <tr>
                    <td><%= cart_item.item.name %></td>
                    <td><%= (cart_item.item.price * @tax ).to_i %></td>
                    <td>
                      <%= form_with model: cart_item,url: public_cart_item_path(cart_item.id), local:true do |f| %>
                        <%= f.number_field(:amount, in: 1..100) %>
                      <% end %>
                    </td>
                    <td><%= ((cart_item.item.price * @tax) * (cart_item.amount)).to_i %> </td>
                  </tr>
                <% end %>
              </tbody>
          </table>
      </div>
    </div>
  </div>
</div>