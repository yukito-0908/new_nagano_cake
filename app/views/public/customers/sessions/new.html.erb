<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="containaer">
    <div class="row">
      <div class="col">
        <div class="login">
          <h4>ログイン</h4>
          <p>会員方はこちらからログイン</p>
            <div class="email">
              <p>メールアドレス</p>
              <P><%= f.email_field :email,:placeholder => "email" %></p>
            </div>
              <div class="field">
                <p>パスワード</p>
                <%= f.password_field :password, autocomplete: "current-password" %>
              </div>
                <div class="actions">
                  <%= f.submit "ログイン" %>
                </div>
        </div>
          <div class="login-item">
            <p>会員登録がお済みでないかた</p>
            <p><%= link_to 'こちら',new_customer_registration_path %>から新規登録を行ってください</p>
            </div>
          </div>
      </div>
    </div>
  </div>
<% end %>
