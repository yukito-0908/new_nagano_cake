<div class="container">
  <div class="row">
    <div class="col">
      <div class="profile">
        <h4 class="m-4 text-center bg-light w-25">マイページ</h4>
          <div class="profile-title m-4 d-flex" style="height:35px; line-height:35px;">
            <h5 class="font-weight-bold mr-4 mt-2">登録情報</h5>
             <p><%=link_to '編集する',edit_public_customers_path(@customer), class: "btn btn-success" %></p>
          </div>
            <div class-"profile-item">
              <table class="table">
                <tbody>
                  <tr>
                    <td class="bg-light border border-dark">氏名</td>
                    <td class="border border-dark"><%= @customer.first_name +  "　" +@customer.last_name %></td>
                  </tr>
                    <tr>
                      <td class="bg-light border border-dark">カナ</td>
                      <td class="border border-dark"><%= @customer.first_name_kana + "　" + @customer.last_name_kana %></td>
                    </tr>
                      <tr>
                        <td class="bg-light border border-dark">郵便番号</td>
                        <td class="border border-dark"><%= @customer.postal_code %></td>
                      </tr>
                        <tr>
                          <td class="bg-light border border-dark">住所</td>
                          <td class="border border-dark"><%= @customer.address %></td>
                        </tr>
                          <tr>
                            <td class="bg-light border border-dark">電話番号</td>
                            <td class="border border-dark"><%= @customer.telephone_number %></td>
                          </tr>
                            <tr>
                              <td class="bg-light border border-dark">メールアドレス</td>
                              <td class="border border-dark"><%= @customer.email %></td>
                            </tr>
                </tbody>
              </table>
            </div>
            <div class="d-flex">
              <div class="customer-address d-flex m-4" style="height:35px; line-height:35px;">
                <h5 class="font-weight-bold mr-4 mt-1">配送先</h5>
                <div class="address-item"><%= link_to "一覧を見る", public_addresses_path,class: "btn btn-primary" %></div>
              </div>
                <div class="customer-order d-flex m-4" style="height:35px; line-height:35px;">
                  <h4 class="font-weight-bold mr-4 mt-1">注文履歴</h4>
                  <div class="order-iten">
                    <%= link_to '一覧を見る' , public_orders_path,class: "btn btn-primary" %>
                  </div>
                </div>
            </div>
      </div>
    </div>
  </div>
</div>