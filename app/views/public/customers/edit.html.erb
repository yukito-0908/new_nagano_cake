<div class="container">
  <div class="row">
    <div class="col">
    <%= form_with model: @customer,url: public_customers_path(@customer), local:true do |f| %>
      <h4>会員詳細編集</h4>
        <div class="sign-name">
          <p>名前</p>
          <p><%= f.text_field :first_name %></p>
          <p><%= f.text_field :last_name %></p>
        </div>

        <div class="sign-name-kana">
          <p>フリガナ</p>
          <p><%= f.text_field :first_name_kana %></p>
          <p><%= f.text_field :last_name_kana %></p>
        </div>

        <div class="email">
          <p>メールアドレス</p>
          <p><%= f.email_field :email %></p>
        </div>

        <div class="postal_code">
          <p>郵便番号(ハイフンなし)</p>
          <p><%= f.text_field :postal_code %></p>
        </div>

        <div class="address">
          <p>住所</p>
          <p><%= f.text_field :address %></p>
        </div>

        <div class="telephone_number">
          <p>電話番号</p>
          <p><%= f.text_field :telephone_number %></p>
        </div>

        <div class="field">
          <p>パスワード(6文字以上)</p>
          <%= f.password_field :password %>
        </div>

        <div class="field">
          <p>パスワード確認用</p>
          <p><%= f.password_field :password_confirmation %></p>
        </div>

        <div class="actions">
          <%= f.submit "編集内容を保存" %>
        </div>
      <% end %>
    </div>
  </div>
</div>