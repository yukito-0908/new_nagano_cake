<div class="container">
  <div class="row">
    <diiv class="col">
       <%= form_with model: @item,url:  admin_item_path, local:true do |f| %>
         <div class="item-title">
           <h4>商品編集</h4>
         </div>
          <h4>商品画像</h4>
          <%= f.attachment_field :image %>
          <h4>商品名</h4>
          <%= f.text_field :name %>
          <h4>商品説明</h4>
          <%= f.text_area :introduction %>
          <p>ジャンル</p>
          <%= f.select :genre_id,options_from_collection_for_select(@genres, :id, :name) %>
          <p>税抜価格</p>
          <%= f.text_field :price %>
          <div class="check_box_tag">
            <%= f.radio_button :is_active, :true %>
            <%= label_tag :is_active, "販売中" %>
            <%= f.radio_button :is_active, :false %>
            <%= label_tag :is_active, "販売停止中" %>
          </div>
          <%= f.submit '変更を保存' %>
       <% end %>
    </diiv>
  </div>
</div>