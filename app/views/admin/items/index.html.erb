<div class="container">
  <div class="row">
    <div class="col">
      <div class="item-title">
        <h4>商品一覧</h4>
      </div>
        <table class="table">
          <thead>
            <tr>
              <th>商品Id</th>
              <th>商品名</th>
              <th>税抜価格</th>
              <th>ジャンル</th>
              <th>ステータス</th>
            </tr>
          </thead>
            <thead>
              <% @items.each do |item| %>
              <tr>
                <td><%= item.id %></td>
                <td><%= item.name %></td>
                <td><%= item.price %></td>
                <td><%= item.genre.name %></td>
                <td>
                  <% if item.is_active == true %>
                    <p class="m-3 text-success">販売中</p>
                  <% else %>
                    <p class="m-3">販売停止中</p>
                  <% end %>
                </td>
              </tr>
              <% end %>
            </thead>
        </table>
        <div class="page text-center"><%= paginate @items,:class=>"d-block" %></div>
    </div>
  </div>
</div>