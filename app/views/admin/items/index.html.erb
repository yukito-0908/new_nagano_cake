<div class="container">
  <div class="row">
    <div class="col">
      <div class="item-title" style="width:20%;">
        <div class="item-list" style="position:relative">
          <h4 class="m-4 text-center bg-light">商品一覧</h4>
          <%= link_to "+", new_admin_item_path, class: "border border-dark rounded-circle p-1 text-center position-absolute text-dark", style: "box-sizing:none; width:15%; top:5px; right:-400%;" %>
        </div>
      </div>
        <table class="table">
          <thead>
            <tr>
              <th>商品Id</th>
              <th>商品名</th>
              <th>税抜価格</th>
              <th>ジャンル</th>
              <th>ステータス</th>
            </tr>
          </thead>
            <thead>
              <% @items.each do |item| %>
              <tr>
                <td><%= item.id %></td>
                <td><%=link_to item.name,admin_item_path(item.id), class: "text-dark" %></td>
                <td><%= item.price %></td>
                <td><%= item.genre.name %></td>
                <td>
                  <% if item.is_active == true %>
                    <p class="text-success">販売中</p>
                  <% else %>
                    <p>販売停止中</p>
                  <% end %>
                </td>
              </tr>
              <% end %>
            </thead>
        </table>
        <div class="page text-center"><%= paginate @items,:class=>"d-block" %></div>
    </div>
  </div>
</div>