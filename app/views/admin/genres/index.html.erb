<div class="container">
  <div class="row">
    <div class="col">
      <div class="genre-title">
        <h4>ジャンル一覧・追加</h4>
      </div>
        <%= form_with model: @genre,url: admin_genres_path, local:true do |f| %>
          <div class="genre-name d-flex">
            <p>ジャンル名</p>
            <div class="genre-input">
                <%= f.text_field :name %>
            </div>
            <div class="genre-link"><%= f.submit '新規登録' %></div>
          </div>
        <% end %>
            <table class="table">
              <thead>
                <tr>
                  <th>ジャンル</th>
                  <th></th>
                </tr>
              </thead>
                <tbody>
                  <% @genres.each do |genre| %>
                    <tr>
                      <td><%= genre.name %></td>
                      <td><%= link_to '編集する', edit_admin_genre_path(genre) %> </td>
                    </tr>
                  <% end %>
                </tbody>
            </table>
    </div>
  </div>
</div>