<div class="container">
  <div class="row">
    <div class="col">
        <div class="genre-title"  style="width:25%;">
          <h4 class=" m-4 text-center bg-light">ジャンル一覧・追加</h4>
        </div>
          <%= form_with model: @genre,url: admin_genres_path, local:true do |f| %>
            <div class="genre-name d-flex m-4">
              <p class="ml-4 mt-1">ジャンル名</p>
              <div class="genre-input  ml-4">
                  <%= f.text_field :name %>
              </div>
              <div class="genre-link  ml-4 mb-4"><%= f.submit '新規登録',class: "btn btn-success" %></div>
            </div>
          <% end %>
              <table class="table w-50">
                <thead class="bg-light">
                  <tr>
                    <th>ジャンル</th>
                    <th></th>
                  </tr>
                </thead>
                  <tbody>
                    <% @genres.each do |genre| %>
                      <tr>
                        <td><%= genre.name %></td>
                        <td><%= link_to '編集する', edit_admin_genre_path(genre),class: "btn btn-success" %> </td>
                      </tr>
                    <% end %>
                  </tbody>
              </table>
    </div>
  </div>
</div>