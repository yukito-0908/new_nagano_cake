<div class="container">
  <div class="row">
    <div class="col">
      <div class="customer-title">
        <h4>会員一覧</h4>
          <table class="table">
            <thead>
              <tr>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
              </tr>
            </thead>
              <tbody>
                <% @customers.each do |customer| %>
                  <tr>
                    <td><%= customer.id %></td>
                    <td><%=link_to customer.first_name + customer.last_name,admin_customer_path(customer.id) %></td>
                    <td><%= customer.email %></td>
                    <td>
                      <% if customer.is_active == true %>
                        <p>有効</p>
                      <% else %>
                        <p>退会</p>
                      <% end %>
                  </tr>
                <% end %>
              </tbody>
          </table>
      </div>
    </div>
  </div>
</div>